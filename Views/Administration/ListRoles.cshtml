@using Microsoft.AspNetCore.Identity
@using FagElGamous.Areas.Identity.Data

@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

@if (Model.Any())
{
    <h1>Roles</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Id</td>
                <td>Edit</td>
                <td>Remove</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td><h5 class="card-title">@role.Name</h5></td>
                    <td>@role.Id</td>
                    <td><a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a></td>
                    @if (role.Name == "SuperUser" || role.Name == "Admin")
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            <form asp-action="deleteRole" method="post" asp-controller="Administration">
                            <button class="btn btn-sm btn-primary" type="submit">Delete</button>
                            <input type="hidden" value="@role.Id" name="roleId" />
                            </form>
                        </td>
                    }
                        
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" style="width:auto"
       asp-controller="Administration" asp-action="CreateRole">Create Role</a>
    
