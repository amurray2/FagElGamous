
@model FagElGamous.ViewModels.EditUserViewModel

@{ 
    ViewBag.Title = "Edit User";
}
<br />
<br />
<h1 class="text-center">Edit User</h1>
<br />
<br />

<form method="post" class="mr-3">

    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label h6"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label h6"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-info">Update</button>
            <a asp-action="Index" asp-controller="Administration" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    <br />
    <br />
    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
            <p>Click "Add or Remove Roles" to navigate to the roles manager.</p>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <p class="card-title h6">@role</p>
                }
            }
            else
            {
                <p class="card-title h6">None at the moment</p>
            }
        </div>
        <div class="card-footer>">
            <div class="card-header">
                <div class="col-sm-10">
                    <a asp-action="ListRoles" asp-controller="Administration" asp-route-roleId="@Model.Id"
                       class="btn btn-secondary" style="width:auto">Add or Remove Roles</a>
                </div>
            </div>
        </div>
    </div>
</form>