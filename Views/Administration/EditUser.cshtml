
@model FagElGamous.ViewModels.EditUserViewModel

@{ 
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>
<form method="post" class="mr-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-sm-10" style="margin-bottom: 30px;">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" asp-controller="Administration" class="btn btn-primary">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer>">
            <div class="card-header">
                <div class="col-sm-10">
                    <a asp-action="ListRoles" asp-controller="Administration" asp-route-roleId="@Model.Id"
                       class="btn btn-primary" style="width:auto">Add or remove Users</a>
                </div>
            </div>
        </div>
    </div>
</form>