@{
}
@model IEnumerable<Artifacts>

@if (Model.Count() <= 0)
{
    <p>This Burials does not have any artifacts.</p>
    <form method="get" asp-controller="Home" asp-action="AddArtifact">
        <button type="submit">Add Artifact</button>
    </form>
}
else
{
    <ul>
        @foreach (var a in Model)
        {
            <li>@a.ArtifactDescription</li>
        }
    </ul>
    <form method="get" asp-controller="Home" asp-action="AddArtifact">
        <button type="submit">Add Artifact</button>
    </form>
}
