<form method="get" asp-controller="Home" asp-action="Filter">
    <label name="Location">Location</label>
    <select name="LocationId" asp-for="@Model.LocationId">
        <option value="" selected>Select Location</option>
        @foreach (Location l in Model.Locations)
        {
            <option value="@l.LocationId">@l.LocationString</option>
        }
    </select>
    <label name="Age">Age</label>
    <select name="Age" asp-for="@Model.Age">
        <option value="All" selected>All</option>
        <option value="A">A (Adult)</option>
        <option value="C">C (Child)</option>
        <option value="N/I">NI (Neonate/Infant)</option>
    </select>
    <label name="HeadDirection">All</label>
    <select name="HeadDirection" asp-for="@Model.HeadDirection">
        <option value="All" selected>Select Head Direction</option>
        <option value="E">E (East)</option>
        <option value="W">W (West)</option>
    </select>
    <button type="submit">Filter</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Burial">Clear</a>
</form>
