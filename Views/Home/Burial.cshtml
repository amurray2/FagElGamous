<form method="get" asp-controller="Home" asp-action="Filter">
    <label name="LocationId">Location</label>
    <select name="LocationId">
        <option value="" selected disabled>All</option>
        @foreach (Location l in Model.Locations)
        {
            <option value="@l.LocationId">@l.LocationString</option>
        }
    </select>
    <label name="Age">Age</label>
    <select name="Age">
        <option value="All" selected>All</option>
        <option value="A">A (Adult)</option>
        <option value="C">C (Child)</option>
        <option value="N/I">NI (Neonate/Infant)</option>
    </select>
    <label name="HeadDirection">Head Direction</label>
    <select name="HeadDirection">
        <option value="All" selected>All</option>
        <option value="E">E (East)</option>
        <option value="W">W (West)</option>
    </select>
    <button type="submit">Filter</button>
</form>
<h1 class="text-center">Burials</h1>
<br />
@foreach (var b in Model.Burials)
{
    <div class="card card-outline-primary m-3 p-5 card mb-3">
        <h3 class="text-center font-weight-bold">@b.Location.LocationString #@b.BurialNumber</h3>
        <hr>

        <div class="row">
            <!--Info about each burial inside bootstrap card-->
            <div class="col">
                <br />
                <h5>Metrics</h5>
                <p>South to Head: @b.SouthToHead meters </p>
                <p>South to Feet: @b.SouthToFeet meters </p>
                <p>West to Head: @b.WestToHead meters </p>
                <p>West to Feet: @b.WestToFeet meters </p>
                <p>Burial Depth: @b.BurialDepth meters </p>
                <p>Length of Remains: @b.LengthOfRemains meters </p>
                <br />
            </div>
            <div class="col">
                <br />
                <h5>Observation</h5>
                <p>Photo</p>
                @if (b.ArtifactFound == true)
                {
                    <p>Artifact Found: Yes</p>
                }
                else
                {
                    <p>Artifact Found: No</p>
                }
                <br />
            </div>

            <div class="col">
                <br />
                <h5>Additional Information</h5>
                <p>Shaft</p>
                <p>Hair Color: @b.HairColor</p>

                @if (b.AgeCodeSingle == "C")
                {
                    <p>Age: Child</p>
                }
                else if (b.AgeCodeSingle == "A")
                {
                    <p>Age: Adult</p>
                }
                else if (b.AgeCodeSingle == "N/I")
                {
                    <p>Age: Neonate/Infant</p>
                }
                else
                {
                    <p>Age: No age recorded</p>
                }


                @if (b.TextileTaken == true)
                {
                    <p>Textile Taken: Yes</p>
                }
                else
                {
                    <p>Textile Taken: No</p>
                }
                <p>Initials of Data Entry Expert: @b.InitialsOfDataEntryExpert</p>
                @if (b.MonthFound == null)
                {
                    <p>Date Found: No date recorded</p>
                }
                else
                {
                    <p>Date Found: @b.MonthFound/@b.DayFound/@b.YearFound</p>
                }
            </div>
        </div>

        <!--Buttons to view additional information about burial-->
        <div>
            <form style="display:inline-block" method="get" asp-action="Artifact" asp-controller="Home">
                <input type="hidden" name="BurialId" value="@b.BurialId" />
                <button class="btn btn-secondary" type="submit">Artifacts</button>
            </form>
            <form style="display:inline-block" method="get" asp-action="BiologicalSample" asp-controller="Home">
                <input type="hidden" name="BurialId" value="@b.BurialId" />
                <button class="btn btn-secondary" type="submit">Biological Samples</button>
            </form>
            <form style="display:inline-block" method="get" asp-action="C14Sample" asp-controller="Home">
                <input type="hidden" name="BurialId" value="@b.BurialId" />
                <button class="btn btn-secondary" type="submit">C14 Samples</button>
            </form>

            <div class="btn-toolbar float-right">
                <form style="display:inline-block" class="float-right" method="get" asp-action="EditBurial" asp-controller="Home">
                    <input type="hidden" name="BurialId" value="@b.BurialId" />
                    <button class="btn btn-info mr-2" type="submit">Edit</button>
                </form>
                <form style="display:inline-block" class="float-right" method="post" asp-action="DeleteBurial" asp-controller="Home">
                    <input type="hidden" name="BurialId" value="@b.BurialId" />
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <br />

    <form method="post" asp-action="UploadPhotos">
        <input type="hidden" name="burialId" value="@b.BurialId" />
        <button class="btn btn-danger" type="submit">Upload Photo</button>
    </form>

}
<div page-info="@Model.PageNumberingInfo"
     page-action="Burial"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary">

</div>
